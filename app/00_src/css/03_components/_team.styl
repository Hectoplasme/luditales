.team
    &__left__inner
        +tablet()
            justify-content center

    &__member
        position relative
        max-width 15rem
        margin auto

        +tablet()
            max-width 22rem

        +desktop()
            margin 1rem

        +wide()
            max-width 22rem
            margin 2rem

        &__thumbnail
            position relative
            width 100%
            padding-top 115%
            pointer-events none

            &--hover
                display block
                content ''
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                opacity 0
                transition opacity 500ms ease
                pointer-events none

        &__infos
            position absolute
            top 50%
            left 50%
            opacity 0
            transform translate(-50%, -50%)
            transition opacity 500ms ease
            pointer-events none

        &:hover
            cursor pointer

            .team__member__thumbnail--hover, .team__member__infos
                opacity 1

    &__cardlist
        background-size cover
        text-align center

        .card
            position fixed
            z-index 20
            top 0
            left 100vw
            width 100vw
            height 100vh
            background url(/assets/images/fond-noir.jpg) no-repeat center center
            background-size cover
            transition left 200ms ease

            &-open
                left 0
                transition left 200ms ease

            +desktop()
                left 100%
                width 70rem

                &:before
                    position fixed
                    content ''
                    top 0
                    left 0
                    width 100%
                    height 100%
                    background #202421
                    opacity 0
                    pointer-events none

                &-open
                    left calc(100vw - 70rem)

                    &:before
                        pointer-events auto
                        opacity 0.5


                &__inner
                    width 70rem


