.team
    &__member
        position relative

        &__thumbnail
            position relative
            padding-top 115%
            background url(/assets/images/avatars/photo-laurianne.png) no-repeat center center
            background-size contain
            pointer-events none

            &:after
                display block
                content ''
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                opacity 0
                background url(/assets/images/avatars/photo-laurianne-hover.png) no-repeat center center
                background-size contain
                transition opacity 200ms ease
                pointer-events none

        &__infos
            position absolute
            top 50%
            left 50%
            opacity 0
            transform translate(-50%, -50%)
            transition opacity 200ms ease
            pointer-events none

        &:hover
            cursor pointer

            .team__member__thumbnail:after, .team__member__infos
                opacity 1

    &__cardlist
        background-size cover
        text-align center

        .card
            position fixed
            z-index 20
            top 0
            left 100vw
            width 100vw
            height 100vh
            background url(/assets/images/fond-noir.jpg) no-repeat center center
            background-size cover
            transition left 200ms ease

            &__inner
                height 100vh
                display flex
                flex-direction column
                justify-content space-around

            &-open
                left 0
                transition left 200ms ease


            &__heading-2
                display block
                width 80%
                position relative
                margin 1rem 0 1rem 10%
                padding 1rem 0
                background $c-white
                color $c-font

                &:before
                    position absolute
                    content ''
                    display block
                    top 0
                    left -1.5rem
                    width 0
                    border-right: 1.5rem solid $c-white;
                    border-top: 1.9rem solid transparent;
                    border-bottom: 1.9rem solid transparent;

                &:after
                    position absolute
                    content ''
                    display block
                    top 0
                    right -1.5rem
                    width 0
                    border-left: 1.5rem solid $c-white;
                    border-top: 1.9rem solid transparent;
                    border-bottom: 1.9rem solid transparent;

            &__thumbnail
                max-width 17rem

            &__gauge
                position relative
                height 1.8rem
                margin-top 1.8rem
                border $c-white solid 2px

                &__inner
                    position absolute
                    top 0
                    left 0
                    height 100%
                    background $c-white

            &__header
                padding-top 2rem
                &__left
                    //margin 0 0 2rem
                &__right
                    display none

                &__center
                    display none

            &__footer
                //margin-bottom 6rem
                .card__heading-3
                    text-align left

            &__button
                padding 1rem
                background transparent
                border none

                .bar
                    width 2.2rem
                    height 0.4rem
                    margin 0.5rem
                    background $c-white
                    border-radius 25px

                    &:nth-of-type(1)
                        transform-origin top left
                        transform rotate(42.5deg) scaleX(1.28)

                    &:nth-of-type(2)
                        transform-origin center center
                        transform scaleX(0)

                    &:nth-of-type(3)
                        transform-origin bottom left
                        transform rotate(-42.5deg) scaleX(1.28)
        .skill
            &__item
                margin-bottom 0
            &__box
                display inline-block
                height 1.8rem
                width 1.8rem
                margin-right 0.1rem
                border $c-white solid 2px

                &--checked
                    background $c-white
