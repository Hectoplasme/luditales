.header
    position absolute
    z-index 11
    width 100%

    .logo
        display inline-block
        position relative
        top 2rem
        height 8rem
        width 20rem
        background url(../images/logo.png) no-repeat center center
        background-size contain

    &__inner.container
        +wide()
            width 100vw
            max-width 100%

    &__left
        position absolute

    &__right
        position fixed
        right $gap
        top 4.2rem
        opacity 1
        transition opacity 500ms ease

        &.is-hidden
            opacity 0
            pointer-events none
            transition opacity 500ms ease

        +wide()
            right  2 * $gap
