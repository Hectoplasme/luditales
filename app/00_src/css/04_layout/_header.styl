.header
    position absolute
    z-index 11
    width 100%

    .logo
        display inline-block
        position relative
        top 2rem
        height 8rem
        width 20rem
        background url(/assets/images/logo.png) no-repeat center center
        background-size contain

    &__inner.container
        +wide()
            width 100vw
            max-width 100%

    &__left
        position absolute

    &__right
        position absolute
        right $gap
        top 4.2rem
        
        +wide()
            right  2 * $gap
